<div id="content" class="span10">
<!-- content starts -->
			
   <div class="row-fluid sortable">		
      <div class="box span12">
         <%= render :partial => 'layouts/title_bar_icons',
                    :locals => { :header_title => "Snort Alerts",
                                 :header_link  => "#" }
         %>
         <div class="box-content">
            <table id="dataTable" class="table table-striped table-bordered bootstrap-datatable">
               <thead>
	          <tr>
	             <th>Snort ID</th>
                <th>Time    </th>
		          <th>Priority</th>
                <th>Protocol</th>
                <th>Source</th>
		          <th>Destination</th>
	   	       <th>MAC (src) </th>
                <th>MAC (dst) </th>
	          </tr>
	       </thead>  
                  <tfoot>
                                <tr>
                            <th rowspan="1" colspan="1"></th>
                            <th rowspan="1" colspan="1"></th>
                            <th rowspan="1" colspan="1"></th>
                            <th rowspan="1" colspan="1"></th>
                            <th rowspan="1" colspan="1"></th>
                            <th rowspan="1" colspan="1"></th>
                            <th rowspan="1" colspan="1"></th>
                            <th rowspan="1" colspan="1"></th>
          </tr>
         </tfoot> 
	       <tbody>
                  <% @snortAlertRecs.each do |rec| %>
                     <tr>
                        <td><%= rec.sigid %></td>
                        <td><%= rec.time %></td>
                        <td><%= rec['priority'] %></td>
                        <td><%= rec.protocol %></td>
                        <td><%= "#{rec.srcip}: #{rec.srcport}" %></td>
                        <td><%= "#{rec.dstip}: #{rec.dstport}" %></td>
                        <td><%= rec.srcmac %></td>
                        <td><%= rec.dstmac %></td>
                     </tr>
                  <% end %>
               </tbody>
            </table>

         </div> <!-- box-content -->
      </div> <!-- box span12 -->
   </div><!-- row-fluid sortable -->
</div><!-- content ends -->

<script type="text/javascript">
//datatable
$(document).ready(function() {
  var oTable = $('#dataTable').dataTable({
      "sDom": "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span12'i><'span12 center'p>>",
      "bJQueryUI": true,
      "sPaginationType": "bootstrap",
      "oLanguage": {
      "sSearch": "Search all columns: ",
      "sLengthMenu": "_MENU_ records per page"
      }
    } );

/* Add a select menu for each TH element in the table footer */
  $("tfoot th").each( function ( i ) {
    this.innerHTML = fnCreateSelect( oTable.fnGetColumnData(i) );
    $('select', this).change( function () {
      oTable.fnFilter( $(this).val(), i );
    } );
  } );

});
</script>
