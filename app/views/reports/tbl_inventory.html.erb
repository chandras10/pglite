<div id="content" class="span10">
<!-- content starts -->
			
   <div class="row-fluid sortable">		
      <div class="box span12">
         <div class="box-header well" data-original-title>
	    <i class="icon-folder-open"></i> Devices
	    <div class="box-icon">
	       <a href="#" class="btn-small btn-setting btn-round"><i class="icon-cog"></i></a>
	       <a href="#" class="btn-small btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
	       <a href="#" class="btn-small btn-close btn-round"><i class="icon-remove"></i></a>
	    </div>
	 </div>
         <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
               <thead>
	          <tr>
	             <th>Username</th>
		     <th>IP Address</th>
                     <th>MAC ID</th>
                     <th>Device Name</th>
		     <th>OS Version</th>
	   	     <th>Location</th>
	          </tr>
	       </thead>   
	       <tbody>
                  <% @deviceinfos.each do |deviceinfo| %>
                     <tr>
                        <td><%= deviceinfo.username %></td>
                        <td><%= deviceinfo.ipaddr %></td>
                        <td><%= deviceinfo.macid %></td>
                        <td><%= deviceinfo.devicename %></td>
                        <td><%= deviceinfo.osversion %></td>
                        <td><%= deviceinfo.location %></td>
                     </tr>
                  <% end %>
               </tbody>
            </table>

         </div> <!-- box-content -->
      </div> <!-- box span12 -->
   </div><!-- row-fluid sortable -->
</div><!-- content ends -->
