<% timeZone = Time.zone.name 
%>
<div id="content" class="span10">
   <div class="box span10">
      <%= render :partial => 'layouts/title_bar_icons',
                 :locals => { :header_title =>  'Product Maintenance',
                              :header_link  => "#" }
      %>
      <div class="box-content" id="tabs-container">
          <ul class="nav nav-tabs" data-tabs="tabs">
		     <li><a href="#license-tab" data-toggle="tab">License</a></li>
		     <li><a href="#health-tab" data-toggle="tab">Health</a></li>
	      </ul>
	        
	      <div id="TabList" class="tab-content" style="overflow:visible">
		     <div class="tab-pane" id="license-tab">
                <%= form_tag({action: :update_license}, {:class => 'form-horizontal', multipart: true}) do %>		        
                   <div class="control-group">
                      <label for="lastUpdateTime" class="control-label">Last Updated:</label>
                      <div class="controls">
                         <input type="text" disabled="" placeholder="<%= @license_info.lastupdatetime.in_time_zone(timeZone).strftime("%Y-%m-%d %H:%M") %>" id="lastUpdateTime" class="input-xlarge disabled">
                      </div>
                   </div>
                   <div class="control-group">
                      <label for="validUntil" class="control-label">Expires On:</label>
                      <div class="controls">
                         <input type="text" disabled="" placeholder="<%= @license_info.valid_until.in_time_zone(timeZone).strftime("%Y-%m-%d %H:%M") %>" id="validUntil" class="input-xlarge disabled">
                         <button class="btn" id="showNewLicenseCtrlsBtn">Update</button>
                      </div>
                   </div>
                   <div class="controls-group" id="newLicensePanel">
                         <label for="licenseFile" class="control-label">New License File: </label>
                         <%= file_field_tag 'licenseFile' %>
                         <%= submit_tag 'Save', class: 'btn btn-primary' %>
                   </div>
                <% end %>                
            </div>
		    <div class="tab-pane" id="health-tab">
		       <%= form_tag({action: :change_process_state}, {:class => "form-horizontal"}) do |f| %>
		          <input type="hidden" name="service_name" id="service_name" value = "" />
		          <table id="processTable" border="1" cellpadding="10" class="Maintenance_Table">
                 <thead>
                    <tr><th>Process</th><th>Status</th><th></th></tr>
                 </thead>
		             <tbody>
		             </tbody>
		          </table>
		       <% end %>
		    </div>

          </div> <!-- tab-content -->                   

      </div>
   </div>
</div>

<script type="text/javascript">
</script>

<%= javascript_include_tag "maintenance.js.coffee" %>
